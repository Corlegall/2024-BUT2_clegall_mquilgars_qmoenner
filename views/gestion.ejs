<body>

    <header>
        <nav class="navbar">
            <div class="logo">
                <img src="img/Logo_locafit.png" alt="Logo" class="logo-image">
            </div>
            <ul class="nav-links">
                <li><a href="index.ejs">Accueil</a></li>
                <li><a href="catalogue.ejs">Catalogue</a></li>
                <li><a href="">Vos Locations</a></li>
            </ul>
            <div class="compte">
                <a href="compte.html" class="compte-container">
                    <img src="img/profil.png" alt="Compte Client" class="Compte-Client">
                    <div class="nom-compte">
                        <span class="prenom-header">Cathy</span>
                        <span class="nom-header">Le Prince</span>
                    </div>
                </a>
            </div>
        </nav>
    </header>


    <div class="container">
        <h1>Gestion des Utilisateurs</h1>

        <div class="actions">
            <button class="btn" id="addUserBtn">Ajouter un utilisateur</button>
        </div>

        <table class="user-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Rôle</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="userTableBody">
                <tr>
                    <td>1</td>
                    <td>Jean Dupont</td>
                    <td>jean.dupont@email.com</td>
                    <td>Admin</td>
                    <td>
                        <button class="btn edit">Modifier</button>
                        <button class="btn delete">Supprimer</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Modal pour Ajouter / Modifier -->
    <div id="userModal" class="modal" style="display: none;">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2 id="modalTitle">Ajouter un utilisateur</h2>
            <form id="userForm">
                <label for="userId">ID:</label>
                <input type="text" id="userId" name="userId" disabled>

                <label for="userName">Nom:</label>
                <input type="text" id="userName" name="userName" required>

                <label for="userEmail">Email:</label>
                <input type="email" id="userEmail" name="userEmail" required>

                <label for="userRole">Rôle:</label>
                <select id="userRole" name="userRole" required>
                    <option value="Utilisateur">Utilisateur</option>
                    <option value="Admin">Admin</option>
                </select>

                <button type="submit" class="btn">Valider</button>
            </form>
        </div>

        <div class="actions">
            <button class="btn" id="addUserBtn">Ajouter un utilisateur</button>
        </div>
    </div>












    <!-- Footer -->
    <footer>
        <div class="footer-content">
            <ul class="footer-lien">
                <li><a href="contact et condition d'utilisation.html">Contact et condition d'utilisation</a></li>
            </ul>
            <p>2024 LocFit. Entreprise de location d'équipement sportif</p>
        </div>
    </footer>

</body>

