    </header>

    <div class="container">
        <section class="product">
            <div class="product-details">
                <div class="title-container">
                    <h2>Administration du site</h2>
                </div>

                <!-- Gestion des utilisateurs -->
                <div class="info-section">
                    <p class="title">Gestion des utilisateurs</p>
                    <form action="#" method="post" class="user-form">
                        <input type="text" name="prenom" placeholder="Prénom" required
                            style="width: 50%; padding: 10px; margin-right: 2%;">
                        <input type="text" name="nom" placeholder="Nom" required
                            style="width: 50%; padding: 10px; margin-top: 1%;">
                        <div style="margin-top: 10px;">
                            <button class="rent-button" type="submit">Ajouter un utilisateur</button>
                            <button class="rent-button" type="button">Supprimer un utilisateur</button>
                        </div>
                    </form>
                </div>



                <!-- Formulaire pour envoyer un message à l'équipe technique -->
                <div class="info-section">
                    <p class="title">Envoyer un message à l'équipe technique</p>
                    <form action="#" method="post">
                        <textarea name="message" placeholder="Votre message" rows="5"
                            style="width: 96%; padding: 10px; margin-bottom: 10px;"></textarea>
                        <br>
                        <button class="rent-button" type="submit">Envoyer</button>
                    </form>
                </div>
            </div>
        </section>
    </div>

    <div class="container2">
        <h1>Gestion des Utilisateurs</h1>

        <div class="actions">
            <button class="btn" id="addUserBtn">Ajouter un utilisateur</button>
        </div>

        <table class="user-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Rôle</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="userTableBody">
                <tr>
                    <td>1</td>
                    <td>Jean Dupont</td>
                    <td>jean.dupont@email.com</td>
                    <td>Admin</td>
                    <td>
                        <button class="btn edit">Modifier</button>
                        <button class="btn delete">Supprimer</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Modal pour Ajouter / Modifier -->
    <div id="userModal" class="modal" style="display: none;">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2 id="modalTitle">Ajouter un utilisateur</h2>
            <form id="userForm">
                <label for="userId">ID:</label>
                <input type="text" id="userId" name="userId" disabled>

                <label for="userName">Nom:</label>
                <input type="text" id="userName" name="userName" required>

                <label for="userEmail">Email:</label>
                <input type="email" id="userEmail" name="userEmail" required>

                <label for="userRole">Rôle:</label>
                <select id="userRole" name="userRole" required>
                    <option value="Utilisateur">Utilisateur</option>
                    <option value="Admin">Admin</option>
                </select>

                <button type="submit" class="btn">Valider</button>
            </form>
        </div>

        <div class="actions">
            <button class="btn" id="addUserBtn">Ajouter un utilisateur</button>
        </div>
    </div>


    <!-- Footer -->
    <footer>
        <div class="footer-content">
            <ul class="footer-lien">
                <li><a href="contact et condition d'utilisation.html">Contact et condition d'utilisation</a></li>
            </ul>
            <p>2024 LocFit. Entreprise de location d'équipement sportif</p>
        </div>
    </footer>
</body>


