<header>
    <nav class="navbar">
        <div class="logo">
            <img src="img/Logo_locafit.png" alt="Logo" class="logo-image">
        </div>
        <ul class="nav-links">
            <li><a href="/">Accueil</a></li>
            <li><a href="/catalogue">Catalogue</a></li>
            <li><a href="/location">Vos Locations</a></li>
        </ul>
        <div class="compte">
            <% if (user) { %>
                <a href="/logout" class="compte-container"> 
                    <div class="nom-compte">
                        <span class="prenom-header">
