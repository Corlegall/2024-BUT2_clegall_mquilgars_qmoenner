        background-color: #A8D5BA;
        font-size: 25px;
    }

    .nav-links a {
        display: flex;
        align-items: center;
        color: white;
        text-decoration: none;
        padding: 10px 15px;
        background-color: #A8D5BA;
    }

    .compte {
        display: flex;
        align-items: center;
        padding-right: 220px;
    }

    .compte-container {
        display: flex;
        align-items: center;
